<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_rep"
    tools:context=".EditarRegistroActivity">

    <ImageView
        android:id="@+id/logoImageViewRegistro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/cocin_app_logo" />

    <TextView
        android:id="@+id/cocinAppTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageViewRegistro"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/modificar_resitro_string"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/niconne"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/modNombreLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nombre"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="9dp"
        />


    <EditText
        android:id="@+id/modNombreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine|text|textCapSentences"
        android:textColor="@color/black"
        android:background="@color/editTrasparencia"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/modApellidoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modNombreEditText"
        android:layout_marginTop="16dp"
        android:text="@string/apellidos"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="9dp"
        />


    <EditText
        android:id="@+id/modApellidoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine|text|textCapSentences"
        android:textColor="@color/black"
        android:background="@color/editTrasparencia"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/modDepartamentoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modApellidoEditText"
        android:layout_marginTop="16dp"
        android:text="@string/departamento"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="9dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modDepartamentoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine|text|textCapSentences"
        android:textColor="@color/black"
        android:background="@color/editTrasparencia"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/modTelefonoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modDepartamentoEditText"
        android:layout_marginTop="16dp"
        android:text="@string/telefono"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="9dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modTelefonoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="phone"
        android:textColor="@color/black"
        android:background="@color/editTrasparencia"
        android:textSize="18sp"
         />

    <Button
        android:id="@+id/modRegistroButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textColor="@color/white"
        android:text="@string/modificar_registro" />

    <Button
        android:id="@+id/cancelRegistroButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="@string/cancelar" />

</LinearLayout>