<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linarLayouVistatDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"

    android:orientation="vertical">
    <TextView
        android:id="@+id/nombreRacionDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingStart="15dp"
        android:background="@color/principal"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:gravity="center"
        android:background="@drawable/fondo_grad"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagenRacion"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cantidadRacionVistaDetalle"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:paddingStart="15dp"
                android:text="@string/cantidadRacionDetalle"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/cantidadRacionDetalleVistaDetalle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:id="@+id/precioRacionVistaDetalle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:layout_margin="0dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/precio" />

            <TextView
                android:id="@+id/precioRacionDetalleVistaDetalle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

        </TableRow>
    </TableLayout>
    </LinearLayout>


</LinearLayout>