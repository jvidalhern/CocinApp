<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_rep"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".PantallaPrincipalActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/userButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/user_ic"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"

        android:src="@drawable/cocin_app_logo" />

    <TextView
        android:id="@+id/cocinAppTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:fontFamily="@font/niconne"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/usuarioLogeadoTextView"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/niconne"
        android:text="@string/en_que_podemos_ayudarte"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/hacerPedidobutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:text="@string/nuevo_pedido" />

        <Button
            android:id="@+id/verPedidosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:text="@string/pedidos_activos" />
        <Button
            android:id="@+id/verHistoricoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:text="@string/historico_pedidos" />


    </LinearLayout>



</LinearLayout>
